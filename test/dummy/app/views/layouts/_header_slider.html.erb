<div id="myCarousel" class="carousel slide">

  <!-- Indicators or bullets to navigate to another slide-->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <div class="fill" style="background-image:url('http://placehold.it/1900x1080/F3F7F9/FFF&text=Bild 1');"></div>
      <div class="carousel-caption">
        <h1>Golden Cobra</h1>
      </div>
    </div>
   
    <div class="item">
      <div class="fill" style="background-image:url('http://placehold.it/1900x1080/E9F0F4/FFF&text=Bild 2');"></div>
    </div>

    <div class="item">
      <div class="fill" style="background-image:url('http://placehold.it/1900x1080/E9F0F4/FFF&text=Bild 3');"></div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-arrow-left2"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-arrow-right2"></span>
  </a>
</div>