          <a href="#"><img class="img-responsive img-customer" src="http://www.placehold.it/500x300/C1CFD9/E9F0F4"></a>
        </div>

        <div class="col-sm-3 col-xs-6 related-item">
          <a href="#"><img class="img-responsive img-customer" src="http://www.placehold.it/500x300/C1CFD9/E9F0F4"></a>
        </div>

      </div>

    </div><!-- /.container -->

  
  </div><!-- /#wrapper -->

  <%= render partial: "/layouts/footer" %>
</body>
</html>
