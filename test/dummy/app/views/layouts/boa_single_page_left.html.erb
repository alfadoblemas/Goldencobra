<!DOCTYPE html>
<html>
<head>
  <title><%= (@article.metatag("Title Tag") || @article.title) if @article%> | Startpage</title>
  <%= render partial: "/layouts/boa/header_meta" %>
</head>

<body>
  <!-- HEADER -->
  <%= render partial: "/layouts/boa/header" %>

  <!-- Article Title -->    
  <div class="container content-header">
    <div class="row">
      <h1><%= yield(:article_title) %></h1>
      <hr />
      <% if yield(:article_teaser).present? %>
        <p class="teaser"><%= yield(:article_teaser) %></p>
      <% end %>
    </div>
  </div>

  <div class="content-txt">
    <div class="container">
      <div class="row">
        <!-- Article -->    
        <div class="article col-sm-6 col-md-8">
          <% if yield(:article_summary).present? %>
            <p class="teaser"><%= yield(:article_summary) %></p>
          <% end %>
          <figure>
            <img class="img-responsive" src="../assets/web/examples/IMG_8595_Fotor2.jpeg">
            <figcaption>
              This photo is taken by Linda Radkau
            </figcaption>
          </figure>
          <% if yield(:article_content).present? %>
            <p><%= yield(:article_content) %></p>
          <% end %>  
        </div>
        <div class="aside col-sm-offset-1 col-sm-5 col-md-offset-1 col-md-3">
          <%= render partial: "/layouts/boa/aside" %>
        </div>
      </div>  
    </div>
  </div>

  <!-- Footer -->
  <%= render partial: "/layouts/boa/footer" %>
  <!-- Script to Activate the Carousel -->

  </body>
</html>
